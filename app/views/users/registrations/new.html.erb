<div class="sign-up">

  <h1 class="sign-up-title">ユーザー会員登録</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="sign-up-box">

      <div class="field">
        <%= f.label :お名前 %><br />
        <%= f.text_field :name, class:"sign-up-input" %>
      </div>

      <div class="field">
        <%= f.label :お名前ふりがな %><br />
        <%= f.text_field :name_kana, class:"sign-up-input" %>
      </div>

      <div class="field">
        <%= f.label :Email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"sign-up-input" %>
      </div>

      <div class="field">
        <%= f.label :電話番号 %><br />
        <%= f.text_field :phone_number, class:"sign-up-input" %>
      </div>

    </div>

    <div class="sign-up-box">

      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, class:"sign-up-input" %>
      </div>

      <div class="field">
        <%= f.label :ご住所 %><br />
        <%= f.text_field :user_address, class:"sign-up-input" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"sign-up-input" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"sign-up-input" %>
      </div>

    </div>

      <div class="actions">
        <%= f.submit "会員登録する", class:"sign-up-button" %>
      </div>

  <% end %>

</div>

<%= render "users/shared/links" %>
