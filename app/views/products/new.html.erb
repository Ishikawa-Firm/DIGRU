<h1>products#new</h1>

<h2> 出品フォーム </h2>

<!--後でemailをname(ログインしているアーティスト名に変更)-->
<h4> アーティスト名</h4>
<%= current_artist.name %>

<%= form_for(@product) do |f| %>

  <% if @product.errors.any? %>  <!-- form forの@bookに合わせる -->
      <div id="error_explanation" class="alert-danger">
        <h2><%= @product.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <h4> シングル/アルバム名</h4>
  <%= f.text_field :name, class: "" %>

  <%= f.fields_for :disk_number do |disknumber| %>
    
    <h4> 枚数</h4>
    <%= disknumber.text_field :disc_name, class: "" %>

      <%= disknumber.fields_for :music do |music| %>

        <h4>曲名</h4>
        <%= music.text_field :name %>
        <h4>順番</h4>
        <%= music.text_field :track_number %>

      <% end %>
  <% end %>

  <h4> 値段</h4>
  <%= f.text_field :price, class: "" %>

  <h4> レーベル名</h4>
  <%= f.text_field :label, class: "" %>

  <h4> ジャンル</h4>
  <%= f.text_field :genre, class: "" %>

  <h4> 在庫数</h4>
  <%= f.text_field :stock, class: "" %>

  <h4> ジャケット写真</h4>
  <%= f.attachment_field :image, class: "" %>

  <h4> 動画URL</h4>
  <%= f.text_area :movie_url, class: "" %>

  <p><%= f.submit '商品を出品する' %></p>

<% end %>