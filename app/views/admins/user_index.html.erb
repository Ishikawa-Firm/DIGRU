<h1 class="admin">ユーザー一覧</h1>

<%= form_tag("user_index", :method => 'get' ) do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag 'Search', :name => nil  %>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th>退会</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @users.each do |user| %>
<tr>
  <td>
    <%= user.id %>
  </td>
  <td>
    <%= link_to user_path(user) do %>
      <%= user.name %>
    <% end %>
  </td>
  <td>
    <%= user.postal_code %> /
    <%= user.user_address %>
  </td>
  <td>
    <%= user.phone_number %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <%= user.deleted_at %>
  </td>
<% end %>
</tbody>
</table>

<%= paginate @users, class: "paginate" %>
