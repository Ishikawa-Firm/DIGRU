<h1>ユーザー購入履歴一覧</h1>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>購入者名</th>
      <th>購入日時</th>
      <th>購入内容</th>
      <th>購入価格総計</th>
      <th>送付先</th>
      <th>ステータス</th>
      <th colspan="6"></th>
    </tr>
  </thead>
<tbody>
<% @histories.each do |history| %>
<tr>
  <td>
	<%= history.cart.user.name %>
  </td>
  <td>
	<%= history.cart.added_at %>
  </td>
  <td>
	<%= history.product.name %>
  </td>
  <td>
  <%= history.price %>
  </td>
  <td>
  <%= history.cart.address.other_postal_code %><br>
  <%= history.cart.address.other_address %><br>
  <%= history.cart.address.other_name %>
  </td>
  <td>
  	<%= history.cart.status %>
  </td>
<% end %>
</tbody>
</table>