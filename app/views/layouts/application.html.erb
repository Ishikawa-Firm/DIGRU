<!DOCTYPE html>
<html lang="ja">
  <head>
    <%= csrf_meta_tags %>

    <meta charset="utf-8">
     <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>DIGRU</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:700%7CNunito:300,600" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="bootstrap.min.css" type="text/css">

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >

    <!-- Custom stlylesheet -->
    <link rel="stylesheet" href="style.css" type="text/css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <!-- Header -->
    <header id="header">
      <!-- Nav -->
      <div id="nav">
        <!-- Main Nav -->
        <div id="nav-fixed">
          <div class="container">
            <!-- logo -->
            <div class="nav-logo">
              <li class="nav-logo-text"><%= link_to products_path do %>DIGRU<% end %></li>
            </div>
            <!-- /logo -->

            <!-- nav -->
            <% if user_signed_in? %>

              <ul class="nav-menu nav navbar-nav user">
                <% if current_user.carts.count > 0 %>
                  <li><%= link_to cart_path(current_user.carts.all.last), class:"cat-5" do %><p class="glyphicon glyphicon-shopping-cart header-icon"></p><p>カート</p><% end %></li>
                <% else %>
                  <li><%= link_to carts_empty_path, class:"cat-5" do %><p class="glyphicon glyphicon-shopping-cart header-icon"></p><p>カート</p><% end %></li>
                <% end %>
                <li><%= link_to user_path(current_user.id), class:"cat-1" do %><p class="glyphicon glyphicon-home header-icon"></p><p>マイページ</p><% end %></li>
                <li><%= link_to artists_path, class:"cat-2" do %><p class="glyphicon glyphicon-headphones header-icon"></p><p>アーティスト一覧</p><% end %></li>
                <li><%= link_to users_help_path, class:"cat-3" do %><p class="glyphicon glyphicon-question-sign header-icon"></p><p>FAQ</p><% end %></li>
                <li><%= link_to destroy_user_session_path, method: :delete, class:"cat-4" do %><p class="glyphicon glyphicon-log-out header-icon"></p><p>ログアウト</p><% end %></li>
              </ul>

            <% elsif artist_signed_in? %>

                <ul class="nav-menu nav navbar-nav artist">
                  <li><%= link_to new_product_path, class:"cat-5" do %><p class="glyphicon glyphicon-bell header-icon"></p><p>商品を出品する</p><% end %></li>
                  <li><%= link_to artists_product_history_path, class:"cat-6" do %><p class="glyphicon glyphicon-cd header-icon"></p><p>受注商品管理</p><% end %></li>
                  <li><%= link_to artist_path(current_artist.id), class:"cat-1" do %><p class="glyphicon glyphicon-log-in header-icon"></p><p>マイページ</p><% end %></li>
                  <li><%= link_to artists_path, class:"cat-2" do %><p class="glyphicon glyphicon-headphones header-icon"></p><p>アーティスト一覧</p><% end %></li>
                  <li><%= link_to users_help_path, class:"cat-3" do %><p class="glyphicon glyphicon-question-sign header-icon"></p><p>FAQ</p><% end %></li>
                  <li><%= link_to destroy_artist_session_path, class:"cat-4", method: :delete do %><p class="glyphicon glyphicon-log-out header-icon"></p><p>ログアウト</p><% end %></li>
                </ul>


            <% else %>

                <ul class="nav-menu nav navbar-nav not">
                  <li><%= link_to users_session_select_path, class:"cat-5" do %><p class="glyphicon glyphicon-log-in header-icon"></p><p>ログイン</p><% end %></li>
                  <li><%= link_to users_registration_select_path, class:"cat-6" do %><p class="glyphicon glyphicon-edit header-icon"></p><p>会員登録</p><% end %></li>
                  <li><%= link_to artists_path, class:"cat-2" do %><p class="glyphicon glyphicon-headphones header-icon"></p><p>アーティスト一覧</p><% end %></li>
                  <li><%= link_to users_help_path, class:"cat-3" do %><p class="glyphicon glyphicon-question-sign header-icon"></p><p>FAQ</p><% end %></li>
                </ul>

            <% end %>
            <!-- /nav -->

          </div>
        </div>
      </div>
    </header>

    <div class='container'>
      <%= yield %>
    </div>

  </body>

  <footer class="footer mt-auto py-3">
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
      <span class="text-muted">CopyRight DIGRU.inc</span>
      </div>
    </div>
  </div>
</footer>
</html>